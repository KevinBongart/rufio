<h1>Listing events</h1>

<table>
  <tr>
    <th>Event type</th>
    <th>Event</th>
    <th>Timestamp</th>
    <th>Customer</th>
    <th>Email address</th>
    <th>Email</th>
    <th>Subject</th>
    <th>Campaign</th>
    <th>Campaign name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.event_type %></td>
    <td><%= event.event_id %></td>
    <td><%= event.timestamp %></td>
    <td><%= event.customer_id %></td>
    <td><%= event.email_address %></td>
    <td><%= event.email_id %></td>
    <td><%= event.subject %></td>
    <td><%= event.campaign_id %></td>
    <td><%= event.campaign_name %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

